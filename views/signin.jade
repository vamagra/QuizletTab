html(lang="en")
  head
    title GitHub signin
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="/css/msteam-app.css", rel="stylesheet")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    script(src="https://statics.teams.microsoft.com/sdk/v1.0/js/MicrosoftTeams.js")
    script(src="/js/app.js")
    script(src="/js/theme.js")
  body
    form.form-signin(role="form", action="/signin", method="post")
      button.ts-btn.ts-btn-primary(type="button", onclick="signInWithQuizlet(event)") Log in with Quizlet
  script.
    microsoftTeams.initialize();
    microsoftTeams.getContext(function (context) {
      TeamsTheme.fix(context.theme);
    });